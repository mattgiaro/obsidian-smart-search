{
  "compilerOptions": {
      "baseUrl": ".",
      "inlineSourceMap": true,
      "inlineSources": true,
      "module": "ESNext",
      "target": "ES2020",
      "allowJs": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "isolatedModules": true,
      "strictNullChecks": true,
      "lib": [
          "DOM",
          "ES5",
          "ES6",
          "ES7",
          "ES2017",
          "ES2018",
          "ES2019",
          "ES2020"
      ],
      "types": ["node"]
  },
  "include": [
      "**/*.ts"
  ]
}